# Comma-separated list of allowed origins for CORS
# Use * for allowing all origins (not recommended for production)
# CORS_ORIGINS="*"

# Rate limiting - requests per minute per IP address
RATE_LIMIT=100

# Default Ollama server URL
OLLAMA_URL=http://localhost:11434

# Default LLM model to use
DEFAULT_MODEL=llama3.2

# Maximum tokens to generate in responses
MAX_TOKENS=1000

# Temperature for LLM sampling (0.0-1.0)
# Lower values make responses more deterministic, higher values more creative
TEMPERATURE=0.7

# Number of LLM instances to cache
CACHE_SIZE=10
